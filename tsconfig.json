{
  "compilerOptions": {
    // Let parcel do the tsc-compiling
    "noEmit": true,
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "es2015.promise"
    ],
    // Allow codesplitting on parcel
    "module": "esnext",
    "moduleResolution": "node",
    // Required for vue classes
    "experimentalDecorators": true,
    // Linty
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    // Required for vue jsx
    "jsx": "preserve",
    "jsxFactory": "h"
  },
  "typesRoot": [
    "./node_modules/@types",
    "./types"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  // Don't do the thing
  "compileOnSave": false
}
