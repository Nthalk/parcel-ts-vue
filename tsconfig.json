{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "es2015.promise"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "jsx": "preserve",
    "jsxFactory": "h"
  },
  "typesRoot": [
    "./node_modules/@types",
    "./types"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "compileOnSave": false
}
